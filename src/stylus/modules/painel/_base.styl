.opacity-sombra
	opacity 0.23

.opacity-brilho
	opacity 0.1

.branco-svg
	fill #FFFFFF

.base-micro
	fill:#544B76

#base>*
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	opacity 0
	z-index -1
	transform translate(0, -10px)
	transition 0.5s

	&.select
		display block
		z-index 1
		opacity 1
		transform translate(0, 0)

